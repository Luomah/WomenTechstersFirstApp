<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/blue">
    <ImageView
        android:id="@+id/tabgirl"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:src="@drawable/tab"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/redgirl"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/red"
        app:layout_constraintTop_toBottomOf="@id/tabgirl"
        app:layout_constraintEnd_toEndOf="@id/tabgirl"/>
    <TextView
        android:id="@+id/startedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Get Started"
        android:layout_marginTop="48dp"
        android:textSize="67sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/redgirl"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grow Together"
        android:textSize="18dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/startedText"/>
    <Button
        android:id="@+id/joinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN NOW"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>